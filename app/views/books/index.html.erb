<main>
<p id="notice"><%= notice %></p>


<h2 class="col-md-3">
 <%= render 'users/list', user: @user %>
 <%= render 'books/list', book: @book_new %>
 </h2>
  <div class="col-md-8">
   <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    <% @books.each do |book| %>
     <tbody>
      <tr>
       <td>
        <%= link_to user_path(book.user) do %>
         <%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %>
        <% end %>
       </td>
       <td>
        <%= link_to book_path(book.id) do %>
         <%= book.title %>
        <%end%>
       </td>
       <td><%= book.body%></td>
      </tr>
     </tbody>
      <% end %>
    </table>
  </div>


</main>